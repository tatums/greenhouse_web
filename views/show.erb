<div>
  <div class="jumbotron">
    <dl>
      <dt>Temperature</dt>
      <dd><%= sprintf('%.2f', @aggregate.ave_temperature) %></dd>

      <dt>Light</dt>
      <dd><%= @aggregate.ave_light %></dd>

      <dt>Humidity</dt>
      <dd><%= @aggregate.ave_humidity %></dd>

      <dt>Count</dt>
      <dd><%= @aggregate.count %></dd>

    </dl>
  </div>

  <div class="progress">
    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="5" aria-valuemin="0" aria-valuemax="100" style="width: 5%">
      <span class="sr-only">45% Complete</span>
    </div>
  </div>

  <canvas id="tempChart" width="400" height="400"></canvas>
  <canvas id="lightChart" width="400" height="400"></canvas>
  <canvas id="humidityChart" width="400" height="400"></canvas>

  <script type="text/javascript" src="/js/charts.js"></script>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th> Time </th>
        <th> Temperature </th>
        <th> Light </th>
        <th> Humidity </th>
      </tr>
    </thead>
    <tbody id="tbody">
    </tbody>
  </table>

</div>
